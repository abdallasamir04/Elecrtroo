@model IEnumerable<Electro_ECommerce.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.UserId</td>
                <td>@item.OrderDate?.ToString("yyyy-MM-dd")</td>
                <td>@item.TotalAmount</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>