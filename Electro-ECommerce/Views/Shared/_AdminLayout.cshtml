<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Electro_ECommerce</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            margin: 0;
            padding: 0;
        }

        #sidebar {
            width: 260px; 
            height: 100vh;
            background-color: #343a40;
            color: white;
            position: fixed;
            left: -280px;
            top: 56px; /* below navbar */
            transition: left 0.3s ease;
            padding-top: 20px;
            z-index: 999;
        }

        .sidebar-open #sidebar {
            left: 0;
        }

        .sidebar-open .main-content {
            margin-left: 280px;
        }

        .nav-link {
            color: white !important;
        }

            .nav-link:hover {
                background-color: #495057;
            }

        .main-content {
            transition: margin-left 0.3s ease;
            padding: 80px 20px 20px 20px; /* add top padding for navbar */
        }
    </style>

    @RenderSection("Style", required: false)
</head>
<body>

    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <!-- Hamburger inside navbar -->
                <button class="btn text-white me-2" id="hamburger" type="button">
                    <i class="fas fa-bars"></i>
                </button>

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Electro</a>

                <li class="nav-item">
                   
                    <span class="navbar-text" style="color: white; font-size: 16px;">Hi, @User.Identity.Name!</span>
                </li>

                <div class="collapse navbar-collapse justify-content-end">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <!-- Sidebar -->
        <div id="sidebar">
            <ul class="nav flex-column px-3">
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">Product</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="Categories" asp-action="Index">Category</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="Order" asp-action="Index">Order</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="User" asp-action="Index">User</a>
                </li>
            </ul>
        </div>
    }

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script>
        const hamburger = document.getElementById('hamburger');
        const body = document.body;

        if (hamburger) {
            hamburger.addEventListener('click', function () {
                body.classList.toggle('sidebar-open');
            });
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
