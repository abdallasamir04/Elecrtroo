@model Product

<div class="row">
    <div class="col-md-5 mb-4 mb-md-0">
        <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? "/images/default-placeholder.png" : Model.ImagePath)"
             class="img-fluid" alt="@Model.Name">
    </div>
    <div class="col-md-7">
        <h4 class="mb-2">@Model.Name</h4>
        <div class="mb-3">
            <div class="d-flex align-items-center">
                <div class="rating me-2">
                    <i class="fas fa-star text-warning"></i>
                    <i class="fas fa-star text-warning"></i>
                    <i class="fas fa-star text-warning"></i>
                    <i class="fas fa-star text-warning"></i>
                    <i class="far fa-star text-warning"></i>
                </div>
                <a href="/Home/Details/@Model.ProductId#reviews" class="text-decoration-none">View Reviews</a>
            </div>
        </div>
        <h5 class="text-primary mb-3">$@Model.Price.ToString("F2")</h5>
        <p class="mb-4">@(Model.Description?.Length > 200 ? Model.Description.Substring(0, 200) + "..." : Model.Description)</p>

        <div class="mb-3">
            <div class="d-flex align-items-center mb-2">
                <span class="me-3">Availability:</span>
                @if (Model.StockQuantity > 0)
                {
                    <span class="badge bg-success">In Stock</span>
                }
                else
                {
                    <span class="badge bg-danger">Out of Stock</span>
                }
            </div>
            <div class="d-flex align-items-center">
                <span class="me-3">Category:</span>
                <a href="/Home/Search?query=@Model.Category?.Name" class="text-decoration-none">@Model.Category?.Name</a>
            </div>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="d-flex">
                <input type="hidden" name="productId" value="@Model.ProductId" />
                <div class="input-group me-2" style="width: 130px;">
                    <button class="btn btn-outline-secondary" type="button" onclick="decrementModalQuantity()">-</button>
                    <input type="number" class="form-control text-center" id="modalQuantity" name="quantity" value="1" min="1" max="10">
                    <button class="btn btn-outline-secondary" type="button" onclick="incrementModalQuantity()">+</button>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-shopping-cart me-2"></i> Add to Cart
                </button>
            </form>
        </div>

        <div class="d-flex flex-wrap gap-2 mt-3">
            <form asp-controller="Wishlist" asp-action="AddToWishlist" method="post">
                <input type="hidden" name="productId" value="@Model.ProductId" />
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="fas fa-heart me-2"></i> Wishlist
                </button>
            </form>

            <button type="button" class="btn btn-outline-secondary" onclick="addToCompare(@Model.ProductId)">
                <i class="fas fa-exchange-alt me-2"></i> Compare
            </button>

            <a href="/Home/Details/@Model.ProductId" class="btn btn-outline-primary">
                <i class="fas fa-info-circle me-2"></i> View Details
            </a>
        </div>
    </div>
</div>

<script>
    function incrementModalQuantity() {
        var input = document.getElementById('modalQuantity');
        var value = parseInt(input.value, 10);
        value = isNaN(value) ? 1 : value;
        input.value = Math.min(value + 1, 10);
    }

    function decrementModalQuantity() {
        var input = document.getElementById('modalQuantity');
        var value = parseInt(input.value, 10);
        value = isNaN(value) ? 1 : value;
        input.value = Math.max(value - 1, 1);
    }
</script>
