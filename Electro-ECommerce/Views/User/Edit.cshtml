@model Electro_ECommerce.Models.User
@{
    ViewData["Title"] = "Edit User";
    Layout = "_AdminLayout";
}

<style>
    .edit-user-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        padding: 20px 30px;
        color: white;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control:focus {
        border-color: #4e73df;
        box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.25);
    }

    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
    }

        .btn-primary:hover {
            background-color: #2e59d9;
            border-color: #2653d4;
        }

    .back-button {
        color: white;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.2s ease;
    }

        .back-button:hover {
            color: rgba(255, 255, 255, 0.8);
            transform: translateX(-3px);
        }

        .back-button i {
            margin-right: 5px;
        }

    .required-indicator {
        color: #dc3545;
        margin-left: 3px;
    }

    .validation-summary-errors ul {
        padding-left: 20px;
        margin-bottom: 0;
    }
</style>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="edit-user-card">
                <div class="card-header-custom d-flex justify-content-between align-items-center">
                    <div>
                        <a asp-controller="User" asp-action="Details" asp-route-id="@Model.Id" class="back-button">
                            <i class="fas fa-arrow-left"></i> Back to Details
                        </a>
                    </div>
                    <h4 class="mb-0">Edit User</h4>
                    <div></div> <!-- Empty div for flex spacing -->
                </div>

                <div class="card-body p-4">
                    <form asp-controller="User" asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="UserName" class="form-label">Username <span class="required-indicator">*</span></label>
                                    <input asp-for="UserName" class="form-control" required />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email Address <span class="required-indicator">*</span></label>
                                    <input asp-for="Email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Role" class="form-label">Role <span class="required-indicator">*</span></label>
                                    <select asp-for="Role" class="form-select" required>
                                        <option value="">Select Role</option>
                                        <option value="Admin">Administrator</option>
                                        <option value="Customer">Customer</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ShippingAddress" class="form-label">Shipping Address</label>
                            <textarea asp-for="ShippingAddress" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="EmailConfirmed" class="form-check-input" />
                                    <label asp-for="EmailConfirmed" class="form-check-label">Account Active</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="TwoFactorEnabled" class="form-check-input" />
                                    <label asp-for="TwoFactorEnabled" class="form-check-label">Two-Factor Authentication</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="User" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}