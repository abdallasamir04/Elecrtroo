@model Electro_ECommerce.Models.Checkout

@{
    ViewData["Title"] = "Checkout";
}

<h2 class="mb-4">Checkout</h2>

<div class="row">
    <!-- Left Side: Billing & Payment -->
    <div class="col-md-7">
        <div class="card p-4 mb-4 shadow-sm">
            <h4 class="mb-3">Billing Information</h4>

            <form asp-action="Index" method="post">
                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" placeholder="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" placeholder="City" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label class="form-label">Payment Method</label>
                    <select asp-for="PaymentMethod" class="form-select">
                        <option value="Stripe">Stripe</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">Proceed to Payment</button>
            </form>
        </div>
    </div>

    <!-- Right Side: Order Summary -->
    <div class="col-md-5">
        <div class="card p-4 shadow-sm">
            <h4 class="mb-3">Order Summary</h4>

            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total</span>
                    <strong>@Model.OrderTotal.ToString("C")</strong> <!-- Currency format -->
                </li>
            </ul>

            <small class="text-muted">
                Your subscription begins today with a free trial (if available).
                You can cancel anytime before the renewal date to avoid charges.
            </small>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
