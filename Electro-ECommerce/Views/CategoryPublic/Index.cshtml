@model Electro_ECommerce.Models.Category

@{
    ViewData["Title"] = Model.Name + " Products";
}

<div class="container py-5">
    <h2 class="text-center mb-4">@Model.Name</h2>

    <div class="row">
        @if (Model.Products != null && Model.Products.Any())
        {
            foreach (var product in Model.Products)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@(product.ImagePath ?? "/images/default-placeholder.png")" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@product.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">$@product.Price</p>
                            <a href="/Home/Details/@product.ProductId" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <h4>No products available in this category.</h4>
            </div>
        }
    </div>
</div>
